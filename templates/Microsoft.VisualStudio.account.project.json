{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/Microsoft.Resources.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "accountName": {
            "type": "string"
        },
        "projectName": {
            "type": "String"
        },
        "gitRepo":{
            "type":"string",
            "defaultValue": "",
            "metadata": {
                "description":"GitHub repository where the project is hosted. Format: {username}/{project}. Ex. Microsoft/dotnet "
            }
        },
        "gitBranch": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Git branch to use for this environment."
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "allowedValues": [
                "Australia East",
                "Brazil South",
                "Canada Central",
                "Central US",
                "East Asia",
                "South India",
                "West Europe"
            ],
            "metadata": {
                "description": "Location for the VSTS account."
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "microsoft.visualstudio/account",
            "name": "[parameters('accountName')]",
            "apiVersion": "2014-02-26",
            "location": "[parameters('location')]",
            "properties": {
                "operationType": "Create",
                "accountName": "[parameters('accountName')]"
            },
            "resources": [
                {
                    "type": "project",
                    "name": "[parameters('projectName')]",
                    "apiVersion": "2014-02-26",
                    "location": "[parameters('location')]",
                    "properties": {
                        "ProcessTemplateId": "6B724908-EF14-45CF-84F8-768B5384DA45",
                        "VersionControlOption": "Git",
                        "bootstrapPipelineTemplate": {
                            "applicationSource": {
                                "repository": {
                                    "repositoryType": "GitHub",
                                    "id": "[parameters('gitRepo')]",
                                    "defaultBranch": "[parameters('gitBranch')]",
                                    "authorizationReference": "GitHub",
                                    "authorization": null,
                                    "properties": {}
                                },
                                "sourceType": "codeRepository",
                                "applicationType": "aspDotNetCore",
                                "applicationConfiguration": {}
                            }
                        }
                    },
                    "dependsOn": [
                        "[concat('microsoft.visualstudio/account/', parameters('accountName'))]"
                    ]
                }
            ]
        }
    ],
    "outputs": {}
}