{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string",
            "metadata": {
                "description": "Must be a unique website name: *****.azurewebsites.net"
            }
        },
        "hostingPlanName": {
            "type": "string"
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "allowedValues": [
                "Australia Central",
                "Australia Central 2",
                "Australia East",
                "Australia SouthEast",
                "Brazil South",
                "Canada Central",
                "Canada East",
                "Central India",
                "Central US",
                "East Asia",
                "East US",
                "East US 2",
                "France Central",
                "France South",
                "Japan East",
                "Japan West",
                "Korea Central",
                "Korea South",
                "North Central US",
                "North Europe",
                "South Central US",
                "South India",
                "Southeast Asia",
                "UK South",
                "UK West",
                "West Central US",
                "West Europe",
                "West India",
                "West US",
                "West US 2"
            ],
            "metadata": {
                "description": "Location for the Application Service. Must be the same as the Service Plan location."
            }
        },
        "serverFarmResourceGroup": {
            "type": "string",
            "defaultValue": "[resourceGroup().name]"
        },
        "appSettings": {
            "type": "array",
            "defaultValue": [{"name":"dummy","value":""}],
            "metadata": {
                "description": "name/value pairs to apply as app settings. Leave the default value if don't want to add anything. Needs at least 1 item."
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Web/sites",
            "name": "[parameters('name')]",
            "apiVersion": "2016-08-01",
            "location": "[parameters('location')]",
            "tags": {
                "[concat('hidden-related:', subscription().id, '/resourcegroups/', parameters('serverFarmResourceGroup'), '/providers/Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]": "empty"
            },
            "properties": {
                "siteConfig": {
                    "copy": [
                        {
                            "name": "appSettings",
                            "count": "[length(parameters('appSettings'))]",
                            "input": {
                                "name": "[parameters('appSettings')[copyIndex('appSettings')].name]",
                                "value": "[parameters('appSettings')[copyIndex('appSettings')].value]"
                            }
                        }
                    ],
                    "phpVersion": "",
                    "pythonVersion": "",
                    "use32BitWorkerProcess": true,
                    "webSocketsEnabled": false,
                    "alwaysOn": true,
                    "javaVersion": "",
                    "http20Enabled": true,
                    "minTlsVersion": "1.2"
                },
                "name": "[parameters('name')]",
                "serverFarmId": "[concat(subscription().id, '/resourcegroups/', parameters('serverFarmResourceGroup'), '/providers/Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]",
                "httpsOnly": true,
                "clientAffinityEnabled": false
            },
            "resources": [
                {
                    "apiVersion": "2016-08-01",
                    "type": "config",
                    "name": "connectionstrings",
                    "dependsOn": [ "[concat('Microsoft.Web/Sites/', parameters('name'))]" ],
                    "copy": [
                        {
                            "name": "properties",
                            "count": "[length(parameters('connectionStrings'))]",
                            "input": {
                                "[parameters('connectionStrings')[copyIndex('properties')].name]" :{
                                    "value": "[parameters('connectionStrings')[copyIndex('properties')].value]",
                                    "type": "[parameters('connectionStrings')[copyIndex('properties')].type]"
                                }
                            }
                        }
                    ]
                  }
            ]
        }
    ],
    "outputs": {
        "site": {
            "type": "object",
            "value": "[reference(parameters('name'), '2016-08-01', 'Full')]"
        }
    }
}