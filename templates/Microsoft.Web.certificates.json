{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "app": {
            "type": "string",
            "metadata": {
                "description": "Name of the website to create ssl certificate and binding for."
            }
        },
        "hostingPlanName": {
            "type": "string"
        },
        "hostName": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Custom host name for the Website."
            }
        }
    },
    "variables": {
        "certificateName": "[concat(parameters('app'), '-certificate')]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/certificates",
            "apiVersion": "2019-08-01",
            "name": "[variables('certificateName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]",
                "canonicalName": "[parameters('hostName')]"
            },
            "resources": [
                {
                    "type": "Microsoft.Web/sites/hostnameBindings",
                    "apiVersion": "2016-03-01",
                    "name": "[concat(parameters('app'), '/', parameters('hostName'))]",
                    "location": "[resourceGroup().location]",
                    "properties": {
                        "sslState": "SniEnabled",
                        "thumbprint": "[reference(resourceId('Microsoft.Web/certificates', variables('certificateName'))).Thumbprint]"
                    }
                }
            ]

        }
    ]
}