{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "size": {
            "type": "string",
            "defaultValue": "Small",
            "allowedValues": [
                "ExtraSmall",
                "Small",
                "Medium",
                "Large",
                "ExtraLarge"
            ]
        }
    },
    "variables": {
        "environmentSize": "[variables(concat('size', parameters('size')))]",
        "sizeExtraSmall": {
            "serverFarm": {
                "sku": "Shared",
                "skuCode": "D1"
            },
            "storage":{
                "accountType": "Standard_LRS",
                "kind": "Storage"
            }
        },
        "sizeSmall": {
            "serverFarm": {
                "sku": "Basic",
                "skuCode": "B1"
            },
            "storage":{
                "accountType": "Standard_LRS",
                "kind": "Storage"
            }
        },
        "sizeMedium": {
            "serverFarm": {
                "sku": "Basic",
                "skuCode": "B2"
            },
            "storage":{
                "accountType": "Standard_LRS",
                "kind": "StorageV2"
            }
        },
        "sizeLarge": {
            "serverFarm": {
                "sku": "Standard",
                "skuCode": "S2"
            },
            "storage":{
                "accountType": "Standard_GRS",
                "kind": "StorageV2"
            }
        },
        "sizeExtraLarge": {
            "serverFarm": {
                "sku": "Standard",
                "skuCode": "S3"
            },
            "storage":{
                "accountType": "Standard_GRS",
                "kind": "StorageV2"
            }
        }
    },
    "resources": [],
    "outputs": {
        "size":{
            "type": "object",
            "value": "[variables('environmentSize')]"
        }
    }
}